{
  "manifest_version": 3,
  "name": "CourseWeb Reminder",
  "description": "Detects new assignments and deadlines on CourseWeb",
  "version": "0.1",

  "permissions": ["storage"],

  "host_permissions": [
    "https://courseweb.sliit.lk/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://courseweb.sliit.lk/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
